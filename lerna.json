{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "next"],
      "message": "chore(release): Publish"
    }
  }
}
